<!DOCTYPE html>
html( lang= (meta.lang) ? meta.lang : "en" )
  head
    meta( http-equiv="Content-Type" content="text/html; charset=utf-8" )
    meta( name="viewport" content="width=device-width, initial-scale=1" )
    if (meta.icon)
      link( rel= "icon" type= "image/png" sizes= "32x32" href= meta.icon )
    title= (meta.title) ? meta.title : "Error - Title not found"
    meta( name="description" content= (meta.description) ? meta.description : "Description not found" )
    // OpenGraph meta
    meta( property= "og:title" content= (meta.title) ? meta.title : "Error - Title not found" )
    meta( property= "og:type" content= "website" )
    if (meta.og_img)
      meta( property= "og:image" content= meta.og_img )
    meta( property= "og:description" content= (meta.og_description) ? meta.og_description : "Description not found" ) 
    // Twitter meta tags
    if (meta.twitter)
      meta( name="twitter:card" content="summary_large_image" )
      meta( name="twitter:site" content= meta.twitter )
      meta( name="twitter:creator" content= meta.twitter )
    // Stylesheets
    link( rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/brands.css" integrity="sha384-1KLgFVb/gHrlDGLFPgMbeedi6tQBLcWvyNUN+YKXbD7ZFbjX6BLpMDf0PJ32XJfX" crossorigin="anonymous" )
    link( rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/fontawesome.css" integrity="sha384-jLuaxTTBR42U2qJ/pm4JRouHkEDHkVqH0T1nyQXn1mZ7Snycpf6Rl25VBNthU4z0" crossorigin="anonymous" )
    link( href="main.css", rel="stylesheet")
  body
    header.container.header
      a(href="#" class="header-name")= name
      nav.container.header-nav
        a(href="#about" class="header-navlink") about
        a(href="#work" class="header-navlink") work
        if (writings)
          a(href="#writings" class="header-navlink") writings

    main.main
      section.home.section--dark(style="background-image: url(" + images.background + ")")

      section.about.section--light#about
        p About

      section.work.section--dark#work
        each project in works
          section.project
            h3= project.name

      if (writings)
        section.container.writings.section--light#writings
          div.center
            h2 My lates blog posts
          each post in writings
            div.writing-post
              a(href= post.link target="_blank")
                h3= post.title
              p= post.summary

    footer.footer.container
      if (social)
      div.container
        each val, key in social
            a(href= val)
              i(class="fab fa-" + key)
      p= credits
